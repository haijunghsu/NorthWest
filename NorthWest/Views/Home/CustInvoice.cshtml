@model IEnumerable<NorthWest.Models.Invoice>

@{
    ViewBag.Title = "Index";
}

<h2>Invoices</h2>

<p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WorkOrder.OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SentAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if(item.WorkOrder.CustomerID == ViewBag.CustID)
        {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkOrder.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SentAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.ActionLink("View Detail", "OrderAssayList", new { id = item.OrderID })
            </td>
        </tr>
        }
    }

</table>
